<div style="height:40px">
  <div id="approve"></div>
  <div id="tweet_response"></div>
  <div id="tweet_fail"></div>
  <div id="blank"></div>
</div>


<%= form_for(@tweet, remote: true) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tweet_text %><br>
    <%= f.text_field :tweet_text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
